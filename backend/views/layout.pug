doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .top 
      a(href="/") Home
      a(href="/chats") Chats
      a(href="/users") Users
      if !user
          a(href="/users/signup") Sign Up
          a(href="/users/login") Log In
      
      a(href="/users/profile") Profile

      if user 
        form(action="/users/logout", method="POST") 
          input(type="submit", value="Log Out")
    block content